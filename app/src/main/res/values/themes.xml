<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wingsgroup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- Customize your theme here. -->
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.Wingsgroup.TitleHero" parent="">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
    </style>
    <style name="Theme.Wingsgroup.TitleDescription" parent="">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>
    <style name="Theme.Wingsgroup.TitleSmall" parent="">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>
</resources>